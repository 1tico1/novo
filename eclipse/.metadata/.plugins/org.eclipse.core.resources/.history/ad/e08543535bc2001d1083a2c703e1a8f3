package br.com.fiap;

import java.util.Scanner;

public class EntradaScanner {

	public static void main(String[] args) {
	
		float num1 = 0.0f, num2 = 0.0f, num3 = 0.0f, num4 = 0.0f, media = 0.0f;
		Scanner scan;
		
		try {
			scan = new Scanner(System.in);
			System.out.println("Digite as 4 notas das provas:");
			num1 = scan.nextInt();
			num2 = scan.nextInt();
			num3 = scan.nextInt();
			num4 = scan.nextInt(); 
			System.out.println("Prova 1: " + num1 + "\nProva 2: " + num2 + "\nProva 3: " + num3 + "\nProva 4: " + num4);
			System.out.println("Media aritmedica: " + (num1+num2+num3+num4)/4);
			
		} catch (Exception e) {
			
		}
		
}
}
